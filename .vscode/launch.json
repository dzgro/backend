{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.api.main:app", "--reload"],
      "cwd": "${workspaceFolder}/api",
      "jinja": true
    },
    {
      "name": "Deploy",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/deploy/src/deploy/deploy.py",
      "cwd": "${workspaceFolder}/deploy",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Git Push",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/git-push-all.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
